{
  "name": "rest-express",
  "version": "1.0.0",
  "description": "Full-featured Express REST API for cPanel deployment",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:debug": "NODE_ENV=development nodemon --inspect server.js",
    "deploy": "node deploy-cpanel.js",
    "cpanel-install": "npm install --production --silent",
    "cpanel-setup": "npm run cpanel-install && npm run db:setup",
    "build": "echo 'No build step required for Express API'",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint . --ext .js,.json --fix",
    "lint:check": "eslint . --ext .js,.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security": "npm audit && npm audit fix",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "tail -f logs/app.log",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "node scripts/reset.js && npm run db:setup",
    "backup": "node scripts/backup.js",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop rest-express",
    "pm2:restart": "pm2 restart rest-express",
    "pm2:logs": "pm2 logs rest-express",
    "docker:build": "docker build -t rest-express .",
    "docker:run": "docker run -p 3000:3000 rest-express",
    "prestart": "npm run security",
    "postinstall": "echo 'Installation completed successfully!'",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.5.0",
    "body-parser": "^2.2.0",
    "compression": "^1.8.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.2",
    "cookie-parser": "^1.4.7",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.4",
    "joi": "^17.11.0",
    "mysql2": "^3.6.0",
    "pg": "^8.11.0",
    "mongoose": "^8.0.0",
    "sqlite3": "^5.1.0",
    "redis": "^4.6.0",
    "nodemailer": "^7.0.3",
    "axios": "^1.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "date-fns": "^3.6.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "crypto": "^1.0.1",
    "sharp": "^0.34.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "connect-mongo": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss": "^1.0.14",
    "hpp": "^0.2.3",
    "express-slow-down": "^2.0.1",
    "csurf": "^1.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "node-cron": "^3.0.3",
    "bull": "^4.12.0",
    "socket.io": "^4.7.0",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "html-pdf": "^3.0.1",
    "archiver": "^6.0.1",
    "unzipper": "^0.10.14",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "stripe": "^18.3.0",
    "paypal-rest-sdk": "^1.8.1",
    "twilio": "^5.0.0",
    "@sendgrid/mail": "^8.1.5",
    "cloudinary": "^2.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "firebase-admin": "^12.0.0",
    "ioredis": "^5.3.0",
    "agenda": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/uuid": "^10.0.0",
    "@types/multer": "^1.4.11",
    "@types/morgan": "^1.9.9",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/passport-jwt": "^3.0.13",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/node-cron": "^3.0.11",
    "pm2": "^5.3.0",
    "artillery": "^2.0.0",
    "clinic": "^12.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3",
    "fsevents": "^2.3.3"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "keywords": [
    "express",
    "rest",
    "api",
    "cpanel",
    "nodejs",
    "backend",
    "server",
    "authentication",
    "database",
    "mongodb",
    "mysql",
    "postgresql",
    "redis",
    "jwt",
    "swagger",
    "docker",
    "pm2"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@domain.com",
    "url": "https://yourdomain.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/rest-express.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/rest-express/issues"
  },
  "homepage": "https://github.com/yourusername/rest-express#readme",
  "lint-staged": {
    "*.{js,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/logs/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "node/no-unpublished-require": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
